{%
  set header_classes = [
  'civic-listing',
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  view_as ? view_as
]
%}
{% set body_attribute = create_attribute() %}
{%
  set body_classes = [
  'civic-listing__body',
  limit ? 'civic-listing--' ~ limit : '',
]
%}

{% block paragraph %}
  <div{{ attributes.setAttribute('id', uniqId).addClass(header_classes) }}>
    <div class="civic-listing__container">
      {% if content.field_c_p_title|render|striptags|trim is not empty %}
        <h2 {{ title_attributes.addClass('civic-listing__header') }}>
          {{ content.field_c_p_title }}
        </h2>
      {% endif %}
      <div{{ body_attribute.addClass(body_classes) }}>
        {{ listing }}
      </div>
      {% if read_more %}
        <div class="civic-listing__cta">
          {{ read_more }}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock paragraph %}
