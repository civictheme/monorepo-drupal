{#
/**
 * @file
 * Civic theme implementation for a 'radios' #type form element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The rendered checkboxes.
 *
 * @see template_preprocess_checkboxes()
 *
 * @ingroup themeable
 */
#}
{# Manually adding in fieldset as we need to remove preRender form markup for civic filter system. #}
{% embed  '@organisms/fieldset/fieldset.twig' with {
  legend: fieldset_legend,
  legend_span: fieldset_legend_span,
  modifier_class: fieldset_modifier_class,
  legend_span_attributes: fieldset_legend_span_attributes,
  attributes: fieldset_attributes
} %}
  {% block children %}
    <div{{ attributes }}>{{ children }}</div>
  {% endblock %}
{% endembed %}
