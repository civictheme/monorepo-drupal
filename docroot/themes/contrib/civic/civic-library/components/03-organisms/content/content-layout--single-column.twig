{#
/**
 * @file
 * Single column edge to edge layout component
 *
 * Available variables:
 * - content: The content for this layout.
 * - modifier_class: CSS modifying class
 *
 */
#}
<div class="civic-layout--single-column">
  {% block content %}
    <div class="civic-layout__content {{ modifier_class }}">
      {{ content }}
    </div>
  {% endblock %}
</div>
