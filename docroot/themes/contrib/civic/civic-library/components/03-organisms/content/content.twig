{#
/**
 * @file
 * Content component.
 *
 * Renders the configured content layout component and sidebar if the
 * sidebar is configured for the page.
 *
 * Page allows for multiple layouts to handle the layout of the content area of the page.
 *
 * All inner components must manage their own layout whether they are rendered
 * with or without a sidebar. Current Civic grid .container implementation
 * allows contained elments to correctly narrow their width to fit into content
 * on the page with sidebar present.
 *
 * Available variables:
 * - content_top: [string] Content top elements.
 * - content: [string] Content elements.
 * - content_bottom: [string] Content bottom elements.
 * - sidebar: [string] Sidebar elements.
 * - theme: [string] Theme: light, dark.
 * - modifier_class: [string] Classes to modify the default component styling.
 * - sidebar_attributes: [string] Sidebar attributes.
 * - content_attributes: [string] Content attributes.
 */
#}

{% set has_sidebar = sidebar is not empty %}
{% set container_class = has_sidebar ? 'civic-content--contained container' : '' %}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, container_class, modifier_class|default('')) %}

{% if content or sidebar %}
  <main class="civic-content {{ modifier_class }}" role="main">
    <a id="main-content" tabindex="-1"></a>

    {% if has_sidebar %}
    <div class="row">
    {% endif %}

      {% if sidebar %}
        {% block sidebar %}
          <aside class="civic-content__sidebar {% if has_sidebar %}col-m-3{% endif %}" role="complementary" {% if sidebar_attributes %}{{ sidebar_attributes }}{% endif %}>
            {{ sidebar }}
          </aside>
        {% endblock %}
      {% endif %}

      {% block content %}
        <section class="civic-content__main {% if has_sidebar %}col-m-8 col-m-offset-1" {% endif %}{% if content_attributes %}{{ content_attributes }}{% endif %}>
          {% if content_top %}
            {{ content_top }}
          {% endif %}

          {{ content }}

          {% if content_bottom %}
            {{ content_bottom }}
          {% endif %}
        </section>
      {% endblock %}

    {% if has_sidebar %}
    </div>
    {% endif %}

  </main>
{% endif %}
