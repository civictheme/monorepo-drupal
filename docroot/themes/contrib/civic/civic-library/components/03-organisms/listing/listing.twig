{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<div class="civic-listing {{ modifier_class }}" {{ attributes }}>

  {% block title %}
    {% if title -%}
      <div class="civic-listing__title">
        {{ title }}
      </div>
    {% endif %}
  {% endblock %}

  {% block exposed %}
    {% if exposed -%}
      <div class="civic-listing__exposed-form">
          {{ exposed }}
      </div>
    {% endif %}
  {% endblock %}

  {% block header %}
    {% if header -%}
        <header class="civic-listing__header" tabindex="0">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        {{ header }}
                    </div>
                </div>
            </div>
        </header>
    {% endif %}
  {% endblock %}

  {% block rows %}
    {% if rows -%}
        <div class="civic--listing__body">
            {{ rows }}
        </div>
    {% endif %}
  {% endblock %}

  {% block empty %}
    {% if (rows is empty or rows is not defined) and empty -%}
        <div class="civic-listing__empty-results">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        {{ empty }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
  {% endblock %}

  {% block rows_below %}
    {% if (items_per_page is defined and items_per_page is not empty) or (pager is defined and pager is not empty)  %}
      <div class="civic-listing__results-below">
          <div class="container">
              <div class="row">
                  {% block items_per_page %}
                      <div class="civic-listing__items_per_page">
                          {% if items_per_page is defined  and items_per_page is not empty %}
                              {{ items_per_page }}
                          {% endif %}
                      </div>
                  {% endblock %}
                  {% block pager %}
                      <div class="civic-listing__pager">
                          {{ pager }}
                      </div>
                  {% endblock %}
              </div>
          </div>
      </div>
    {% endif %}
  {% endblock %}

  {% block footer %}
    {% if footer -%}
        <footer class="civic-listing__footer">
            {{ footer }}
        </footer>
    {% endif %}
  {% endblock %}

</div>
