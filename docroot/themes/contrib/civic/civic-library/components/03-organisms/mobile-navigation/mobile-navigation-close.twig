{#
/**
  * @file
  * Mobile Navigation Close component.
  *
  * Available variables:
  * - theme: [string] theme: light, dark.
  * - modifier_class: [string] Additional classes for the component.
  * - text: [string] Display for the button.
  * - attributes: [string] Button tag attributes.
#}

{% set button_text = text|default('Close') %}
{% set modifier_class = '%s %s'|format('civic-mobile-navigation-close__button', modifier_class|default('')) %}
{% set attribute_values = '%s %s'|format('data-flyout-close-all-trigger', attributes|default('')) %}

<div class="civic-mobile-navigation-close {{ modifier_class }}">
  {% include '@atoms/button/button.twig' with {
    theme: theme,
    type: 'button',
    size: 'small',
    text: button_text,
    icon: 'userinterface_close',
    icon_placement: 'after',
    attributes: attribute_values,
    modifier_class: modifier_class,
  } only %}
</div>
