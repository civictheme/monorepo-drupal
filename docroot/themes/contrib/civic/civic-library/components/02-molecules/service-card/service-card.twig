{#
/**
 * @file Event card component.
 *
 * Available variables:
 * - links: [object] Consist details of the link like text, url, new_window, is_external.
 * - modifier_class: [string] Classes to modify the default component styling.
 * - title: [string] The text of card title.
 * - theme: [string] card theme: light, dark.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<div class="civic-service-card {{ modifier_class }}">
  <div class="civic-service-card__content">
    {% block content_top %}
        {% if content_top %}
          <div class="civic-service-card__content-top">
            {{ content_top }}
          </div>
        {% endif %}
    {% endblock %}

    {% block title %}
        {% if title %}
          <div class="civic-service-card__title">
            {{ title }}
          </div>
        {% endif %}
    {% endblock %}

    {% block links %}
        {% if links is not empty %}
          <ul class="civic-service-card__links">
            {% for link in links %}
              <li class="civic-service-card__link__item">
                {% include '@atoms/link/link.twig' with {
                  theme: theme,
                  text: link.text,
                  url: link.url,
                  new_window: link.new_window,
                  is_external: link.is_external
                } only %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
    {% endblock %}

    {% block content_bottom %}
        {% if content_bottom %}
          <div class="civic-service-card__content-bottom">
            {{ content_bottom }}
          </div>
        {% endif %}
    {% endblock %}
  </div>
</div>
