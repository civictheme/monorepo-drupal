{#
/**
 * @file
 * Logo component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - logos: [object] Object with 'mobile' and 'desktop' keys:
 *    - src: [string] URL for the logo.
 *    - alt: [string] Image alt text.
 * - url: [string] Optional URL that wraps the logo.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}
{% set title = logo.alt ? logo.alt : 'Logo' %}

{% if logos is not empty %}
  {% for type, logo in logos %}
    {% set visibility_class = type == 'mobile' ? 'show-xxs hide-m' : 'hide-xxs show-m' %}
    {% if logo.src is not empty %}
      <div class="civic-logo {{ visibility_class }} {{ modifier_class }}">
        {% if url is not empty %}
        <a class="civic-logo__url" href="{{ url }}" title="Click to go to the homepage">
        {% endif %}
          <img src="{{ logo.src }}" {% if logo.alt is not empty %}alt="{{ logo.alt }}" {% endif %} title="{{ title }}"/>
        {% if url is not empty %}
        </a>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
{% endif %}
