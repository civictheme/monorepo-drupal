{#
/**
 * @file
 * Event Card component.
 *
 * Variables:
 * - theme: [string] Theme for large filter.
 * - image: [object] Consist details of the card image like src, alt text.
 * - content_top: [string] Content slot.
 * - content_middle: [string] Content slot.
 * - content_bottom: [string] Content slot.
 * - date: [string] Formatted date.
 * - title: [string] Title.
 * - summary: [string] Summary.
 * - tag: [string] Tag.
 * - tags: [array] Array of tags.
 * - url: [string] Optional linl.
 * - is_external: [boolean] Link is external or not.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set no_image_class = image is empty ? 'civic-event-card--no-image' : '' %}
{% set modifier_class = '%s %s %s'|format(theme_class, no_image_class, modifier_class|default('')) %}

<div class="civic-event-card {{ modifier_class }}">
  {% block image %}
    {% if image.src is not empty %}
      <div class="civic-event-card__image-wrapper">
        <img src="{{ image.src }}" {% if image.alt is not empty %} alt="{{ image.alt }} {% endif %}">
        {% if image_over %}
          <div class="civic-event-card__image-over">
            {{ image_over }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endblock %}

  <div class="civic-event-card__content">
    {% block content_top %}
      {% if content_top %}
        <div class="civic-event-card__content-top">
          {{ content_top }}
        </div>
      {% endif %}
    {% endblock %}

    {% block date %}
      {% if date %}
        {% include '@atoms/tag/tag.twig' with {
          theme: theme,
          text: date,
          icon: 'business_calendar',
          icon_placement: 'before',
          modifier_class: 'civic-event-card__date'
        } only %}
      {% endif %}
    {% endblock %}

    {% block title %}
      {% if title %}
        <div class="civic-event-card__title">
          {% if url %}
          <a class="civic-event-card__title-link" href="{{ url }}" {% if is_external %} title="Opens in new tab" target="_blank" {% endif %}>
            {% endif %}
            {{ title }}
            {% if url %}
          </a>
          {% endif %}
        </div>
      {% endif %}
    {% endblock %}

    {% block content_middle %}
      {% if content_middle %}
        <div class="civic-event-card__content-middle">
          {{ content_middle }}
        </div>
      {% endif %}
    {% endblock %}

    {% block location %}
      {% if location %}
        <div class="civic-event-card__location">
          {{ location }}
        </div>
      {% endif %}
    {% endblock %}

    {% block summary %}
      {% if summary %}
        <div class="civic-event-card__summary">
          {{ summary }}
        </div>
      {% endif %}
    {% endblock %}

    {% block tags %}
      {% if tags or url %}
        <div class="civic-event-card__bottom-wrapper">
          {% if tags is not empty %}
            <div class="civic-event-card__tags">
              {% for tag in tags %}
                {% include '@atoms/tag/tag.twig' with {
                  theme: theme,
                  text: tag,
                  is_alt: true,
                } only %}
              {% endfor %}
            </div>
          {% endif %}
          {% if url %}
            {% if is_external %}
              {% include '@atoms/icon/icon.twig' with {
                symbol: 'arrows_upperrightarrow',
                color: 'primary',
                modifier_class: 'civic-navigation-card__icon--external'
              } only %}
            {% else %}
              {% include '@atoms/icon/icon.twig' with {
                symbol: 'arrows_rightarrow_3',
                color: 'primary',
                modifier_class: 'civic-navigation-card__icon--arrow',
              } only %}
            {% endif %}
          {% endif %}
        </div>
      {% endif %}
    {% endblock %}

    {% block content_bottom %}
      {% if content_bottom %}
        <div class="civic-event-card__content-bottom">
          {{ content_bottom }}
        </div>
      {% endif %}
    {% endblock %}
  </div>
</div>
