{#
/**
* @file
* Back to Top component.
*
* Variables:
* - theme: [string] Theme: light, dark.
*/
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}

<div class="civic-back-to-top {{ theme_class }}" data-component-name="back-to-top" data-scrollspy data-scrollspy-offset="400">
   {% include '@molecules/icon-link/icon-link.twig' with {
    theme: theme,
    symbol: 'arrows_uparrow_1',
    url: '#top',
    with_border: true,
    text:'Return focus to top of page',
  } only %}
</div>
