<div class="civic-search">
  <div class="civic-search__form">
    <div class="civic-search__field">
      {% include '@atoms/icon/icon.twig' with {
        symbol: 'userinterface_magnifier',
        modifier_class: 'civic-search__icon'
      } only %}
      {% include '@atoms/input/input.twig' with {
        text: button_text,
        type: 'search',
        theme: 'light',
        placeholder: placeholder,
        modifier_class: 'civic-search__input',
        attributes: 'name=keys',
        value: keys ?? '',
      } only %}
    </div>
    {% include '@atoms/button/button.twig' with {
      text: button_text,
      type: 'primary',
      theme: 'dark',
      modifier_class: 'civic-search__button',
    } only %}
  </div>
  {% if helper_text %}
    <p class="civic-search__helper-text">{{ helper_text }}</p>
  {% endif %}
</div>
