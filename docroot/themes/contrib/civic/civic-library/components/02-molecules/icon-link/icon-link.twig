{#
/**
 * @file
 * Icon Link component.
 *
 * Variables:
 * - theme: [string] Theme for large filter.
 * - size: [string] Icon size.
 * - symbol: [string] Icon name.
 * - text: [string] Link text.
 * - new_window: [boolean] Open in a new window.
 * - url: [string] URL for the link button.
 * - content: [string] Optional inner content.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set size_class = size ? 'civic-icon-link--size-%s'|format(size) : '' %}
{% set with_border_class = with_border ? 'civic-icon-link--with-border':'' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, size_class, with_border_class, modifier_class|default('')) %}

{% if url %}
  <a class="civic-icon-link {{ modifier_class }}" href="{{ url }}" {{ new_window ? 'target="_blank"' }} {% if text %} title="{{ text }}" {% endif %} {% if attributes %}{{ attributes }}{% endif %}>
{% else %}
  <button class="civic-icon-link {{ modifier_class }}" {% if text %}title="{{ text }}"{% endif %} {% if attributes %}{{ attributes }}{% endif %}>
{% endif %}
    {% if text is not empty %}
      <span class="visually-hidden">{{ text }}</span>
    {% endif %}
    {% if symbol is defined %}
      {% include '@atoms/icon/icon.twig' with {
        symbol: symbol,
        size: size
      }  only %}
    {% endif %}
    {% if content is not empty %}
      {{ content }}
    {% endif %}
{% if url %}
  </a>
{% else %}
  </button>
{% endif %}
