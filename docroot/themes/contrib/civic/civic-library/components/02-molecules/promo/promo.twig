{#
/**
 * @file
 * Promo component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - title: [string] Title text.
 * - content: [string] Content.
 * - link: [object] Link:
 *   - title [string] Link title.
 *   - url [string] Link URL.
 *   - new_window [boolean] Open link in the new window.
 * - modifier_class:[string] Additional classes.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class) %}

{% if title is not empty or content is not empty %}
  <div class="civic-promo {{ modifier_class }}">
    <div class="civic-promo__inner">
      {% block content %}
        {% block column_one %}
          <div class="civic-promo__first-container">
            {% if title %}
              <div class="civic-promo__title">{{ title }}</div>
            {% endif %}
            {% if content %}
              <div class="civic-promo__content">{{ content }}</div>
            {% endif %}
          </div>
        {% endblock %}
        {% block column_two %}
          <div class="civic-promo__second-container">
            {% if link %}
              {% include '@atoms/button/button.twig' with {
                theme: theme,
                type: 'secondary',
                kind: 'link',
                size: 'large',
                text: link.title,
                url: link.url,
                new_window: link.new_window,
                modifier_class: 'civic-promo__button',
                icon: 'arrows_rightarrow_3',
              } only %}
            {% endif %}
          </div>
        {% endblock %}
      {% endblock %}
    </div>
  </div>
{% endif %}
