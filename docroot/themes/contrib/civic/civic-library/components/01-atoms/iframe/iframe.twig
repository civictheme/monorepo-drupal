{#
/**
 * @file
 * Iframe component.
 *
 * Variables:
 * - url: [string] URL for the src.
 * - width: [integer] Optional width of the iFrame.
 * - height: [integer] Optional height of the iFrame.
 * - modifier_class: [string] Classes to modify the default component styling.
 * - attributes: [string] Additional attributes.
 */
#}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<div class="civic-iframe {{ modifier_class }}">
  <div class="container">
    <div class="row">
      <div class="civic-accordion__content-top col-xs-12">
        <iframe {% if url %}src="{{ url }}"{% endif %} {% if width %}width="{{ width }}"{% endif %} {% if height %}height="{{ height }}"{% endif %} {% if attributes %}{{ attributes }}{% endif %}></iframe>
      </div>
    </div>
  </div>
</div>
