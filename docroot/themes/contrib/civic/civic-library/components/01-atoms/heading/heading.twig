{#
/**
 * @file
 * Heading component.
 *
 * Variables:
 * - title: [string] The text of title.
 * - level: [string] 1 | 2 | 3 | 4 | 5 | 6 The default is 2.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set level = level|default('2') %}

{% if title %}
  <h{{ level }} class="civic-heading {{ modifier_class|default('') }}">
    {{- title|raw -}}
  </h{{ level }}>
{% endif %}
