{#
/**
 * @file
 * Pagination component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - heading_id: [string] Heading id.
 * - items: [array] Array of pagination items:
 *   - text: [string] Item text.
 *   - href: [string] Item link.
 * - current: [string] Current page number.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 * - items_per_page_label: [string] Label for items per page.
 * - items_per_page_options: [array] Array of options (applies to optgroup type):
 *   - type: [string] Option type ('option')
 *   - label: [string] Option label.
 *   - value: [string] Option value.
 *   - selected: [string] Flag whether option is selected.
 * - items_per_page_attributes: attributes for select element.
 * - ellipses: [object] Boolean flags for whether to print ellipses.
 *   - previous: [boolean] show ellipsis before item links
 *   - next: [boolean] show ellipsis after item links
 */
#}

{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}
{% set items_per_page_label = items_per_page_label|default('Items per page') %}

{% if items is not empty %}
  <nav class="civictheme-pager {{ modifier_class }}" role="navigation" {% if heading_id is not empty %}aria-labelledby="{{ heading_id }}"{% endif %}>
    <h4 {% if heading_id is not empty %}id="{{ heading_id }}"{% endif %} class="civictheme-visually-hidden">{{ 'Pagination' }}</h4>

    {% if items_per_page_options is defined and items_per_page_options is not empty %}
      <div class="civictheme-pager__items_per_page">
        {%- include '@atoms/field-label/field-label.twig' with {
          content: items_per_page_label
        } -%}
        {%- include '@atoms/select/select.twig' with {
          theme: theme,
          is_multiple: false,
          options: items_per_page_options,
          attributes: items_per_page_attributes,
          modifier_class: 'civictheme-select--pager'
        } -%}
      </div>
    {% endif %}

    <ul class="civictheme-pager__items {{ pager_items_modifier_class }}">
      {# Print first item if we are not on the first page. #}
      {% if items.first is not empty %}
        <li class="civictheme-pager__item civictheme-pager__item--first hide-xxs show-l">
          {% set attributes = 'title="Go to last page"' %}
          {% include '@atoms/link/link.twig' with {
            theme: theme,
            text: items.first.text|default('First'),
            url: items.first.href,
            disabled: (current - 1) ? 0 : 1,
            icon: 'left-arrow',
            icon_placement: 'before',
            attributes: attributes,
            modifier_class: 'civictheme-pager__link',
          } only %}
        </li>
      {% endif %}

      {# Print previous item. #}
      <li class="civictheme-pager__item civictheme-pager__item--previous">
        {% if current - 1 %}
          {% set attributes = 'title="Go to previous page - page %s"'|format(current - 1) %}
        {% else %}
          {% set attributes = 'title="Go to previous page"' %}
        {% endif %}
        {% include '@atoms/link/link.twig' with {
          theme: theme,
          text: items.previous.text|default('Prev'),
          url: items.previous.href,
          disabled: (current - 1) ? 0 : 1,
          icon: 'left-arrow',
          icon_placement: 'before',
          attributes: attributes,
          modifier_class: 'civictheme-pager__link',
        } only %}
      </li>

      {# Add an ellipsis if there are further previous pages. #}
      {% if ellipses.previous %}
        <li class="civictheme-pager__item civictheme-pager__item--ellipsis civictheme-pager__item--ellipsis-previous" role="presentation">
          &hellip;
        </li>
      {% endif %}

      {# Generate pager. #}
      {% for key, item in items.pages %}
        <li class="civictheme-pager__item {{ current == key ? ' civictheme-pager__item--active' : 'hide-xxs show-l' }}">
          {% if current == key %}
            {% set attributes = 'title="Current page"' %}
          {% else %}
            {% set attributes = 'title="Go to page %s of %s"'|format(key, items.pages|length) %}
          {% endif %}
          {% include '@atoms/link/link.twig' with {
            theme: theme,
            text: key,
            title: title,
            hidden_text: current == key ? 'Current page' : 'Page',
            url: item.href,
            attributes: attributes,
            modifier_class: 'civictheme-pager__link ' ~ (current == key ? 'civictheme-pager__link--active' : ''),
          } only %}
        </li>
      {% endfor %}

      {# Add an ellipsis if there are further next pages. #}
      {% if ellipses.next %}
        <li class="civictheme-pager__item civictheme-pager__item--ellipsis civictheme-pager__item--ellipsis-next" role="presentation">
          &hellip;
        </li>
      {% endif %}

      {# Print next item if we are not on the last page. #}
      <li class="civictheme-pager__item civictheme-pager__item--next">
        {% if current < total_pages %}
          {% set attributes = 'title="Go to next page - page %s"'|format(current + 1) %}
        {% else %}
          {% set attributes = 'title="Go to next page"' %}
        {% endif %}
        {% include '@atoms/link/link.twig' with {
          theme: theme,
          text: items.next.text|default('Next'),
          title: title,
          aria_text: 'Next page',
          url: items.next.href,
          disabled: (current < total_pages) ? 0 : 1,
          icon: 'right-arrow-2',
          icon_placement: 'after',
          attributes: attributes,
          modifier_class: 'civictheme-pager__link',
        } only %}
      </li>

      {# Print last item if we are not on the last page. #}
      {% if items.last %}
        {% set attributes = 'title="Go to last page"' %}
        <li class="civictheme-pager__item civictheme-pager__item--last hide-xxs show-l">
          {% include '@atoms/link/link.twig' with {
            theme: theme,
            text: items.last.text|default('Last'),
            url: items.last.href,
            disabled: (current < total_pages) ? 0 : 1,
            icon: 'right-arrow-2',
            icon_placement: 'after',
            attributes: attributes,
            modifier_class: 'civictheme-pager__link',
          } only %}
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
