{#
/**
 * @file
 * Logo component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - type: [string] Type: default, inline, stacked.
 * - logos: [object] Object with 'primary' and 'secondary' keys:
 *    - visibility_type: [object] Object with 'mobile' and 'desktop' keys:
 *       - src: [string] URL for the logo.
 *       - alt: [string] Image alt text.
 * - url: [string] Optional URL that wraps the logo.
 * - title: [string] Optional logo title attribute.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set type = type in ['default', 'inline', 'stacked'] ? type : 'default' %}
{% set type_class = 'civictheme-logo-type-%s'|format(type|default('default')) %}
{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if logos is not empty %}
  {% set processed_logos = {} %}
  {% for logo_type, logo_values in logos|reverse %}
    {% for visibility_type, logo in logo_values %}
      {% if visibility_type in processed_logos|keys %}
        {% set processed_logos = processed_logos|merge({(visibility_type): processed_logos[(visibility_type)]|merge({(logo_type): logo})}) %}
      {% else %}
        {% set processed_logos = processed_logos|merge({(visibility_type): {(logo_type): logo}}) %}
      {% endif %}
    {% endfor %}
  {% endfor %}
  {% set logos = processed_logos %}
{% endif %}

{% if logos is not empty %}
  {% for visibility_type, logo_values in logos %}
    {% set visibility_class = visibility_type == 'mobile' ? 'show-xxs hide-m' : 'hide-xxs show-m' %}
    <div class="civictheme-logo {{ visibility_class }} {{ modifier_class }}" {% if attributes is not empty %}{{ attributes|raw }}{% endif %}>
      <div class="{{ type_class }}">
      {% if url is not empty %}
        <a class="civictheme-logo__url" href="{{ url }}" title="{{ title|default('Click to go to the homepage') }}">
      {% endif %}
      {% for logo_type, logo in logo_values %}
        {% set display_logo = TRUE %}
        {% if logo_type == 'secondary' %}
          {% if type not in ['inline', 'stacked'] %}
            {% set display_logo = FALSE %}
          {% endif %}
        {% endif %}
        {% if not loop.first %}
          <hr class="civictheme-logo--hr">
        {% endif %}
        {% if logo.src is not empty and display_logo %}
          {% include '@atoms/image/image.twig' with {
            theme: theme,
            src: logo.src,
            alt:  logo.alt,
          } only %}
        {% endif %}
      {% endfor %}
      {% if url is not empty %}
        </a>
      {% endif %}
      </div>
    </div>
  {% endfor %}
{% endif %}
