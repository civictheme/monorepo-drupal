{#
/**
 * @file
 * Link List component.
 *
 * Variables:
 * - direction: [string] Direction: horizontal, vertical.
 * - items: [array] Items array
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set direction_class = 'civictheme-item-list--%s'|format(direction|default('vertical')) %}
{% set modifier_class = '%s %s'|format(direction_class, modifier_class|default('')) %}

{% if items is not empty %}
  <div class="civictheme-item-list {{ modifier_class }}" {% if attributes %}{{ attributes|raw }}{% endif %}>
    {% block items %}
      <ul class="civictheme-item-list__list">
        {% for item in items %}
          <li class="civictheme-item-list__list__item">
            {{ item }}
          </li>
        {% endfor %}
      </ul>
    {% endblock %}
  </div>
{% endif %}
