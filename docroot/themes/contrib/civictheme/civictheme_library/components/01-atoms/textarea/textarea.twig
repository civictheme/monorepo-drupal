{#
/**
 * @file
 * Textarea component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - rows: [integer] Optional number of rows.
 * - name: [string] DOM name.
 * - value: [string] DOM value.
 * - id: [string] DOM id.
 * - placeholder: [string]  Placeholder text.
 * - is_disabled: [boolean] Denote if the component is disabled.
 * - is_invalid: [boolean] Denote if the component is invalid.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set disabled_class = is_disabled ? 'civictheme-textarea--disabled' : '' %}
{% set error_class = is_invalid ? 'civictheme-textarea--error' : '' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, disabled_class, error_class, modifier_class|default(''))|trim %}

{% if name is not empty %}
  <textarea
    class="civictheme-textarea {{ modifier_class }}"
    type="textarea"
    {% if rows %}rows="{{ rows }}"{% endif %}
    name="{{ name }}"
    {% if id %}id="{{ id }}"{% endif %}
    {{ is_disabled ? 'disabled' }}
    {% if placeholder %} placeholder="{{ placeholder }}" {% endif %}
    {% if attributes is not empty %}{{ attributes|raw }}{% endif%}
  >
  {% if value is not empty %}{{ value }}{% endif %}
  </textarea>
{% endif %}
