{#
/**
 * @file
 * Checkbox component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - label: [string] Label.
 * - name: [string] DOM name.
 * - value: [string] DOM value.
 * - id: [string] DOM id.
 * - is_checked: [boolean] Denote if the component is checked.
 * - is_disabled: [boolean] Denote if the component is disabled.
 * - is_invalid: [boolean] Denote if the component is invalid.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set disabled_class = is_disabled ? 'civictheme-checkbox--disabled' : '' %}
{% set error_class = is_invalid ? 'civictheme-checkbox--error' : '' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, disabled_class, error_class, modifier_class|default(''))|trim %}

{% if name is not empty %}
  <div class="civictheme-checkbox {{ modifier_class }}" {% if attributes %}{{ attributes|raw }}{% endif %}>
    <input
      class="civictheme-checkbox__element"
      type="checkbox"
      name="{{ name }}"
      {% if value %}value="{{ value }}"{% endif %}
      {% if id %}id="{{ id }}"{% endif %}
      {{ is_checked ? 'checked' }}
      {{ is_disabled ? 'disabled' }}
    />
    <span class="civictheme-checkbox__state"></span>
    {% if label is not empty %}
      {% include '@atoms/label/label.twig' with {
        theme: theme,
        content: label,
        for: id ? id : null,
        modifier_class: 'civictheme-checkbox__label',
      } only %}
    {% endif %}
  </div>
{% endif %}
