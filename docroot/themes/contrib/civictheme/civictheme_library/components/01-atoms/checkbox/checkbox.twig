{#
/**
 * @file
 * Checkbox component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content: [string] Label content.
 * - is_checked: [boolean] Denote if the control is checked.
 * - is_invalid: [boolean] Denote if the control is invalid.
 * - is_disabled: [boolean] Denote if the control is disabled.
 * - name: [string] DOM name.
 * - value: [string] DOM value.
 * - id: [string] DOM id.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set disabled_class = is_disabled ? 'ct-checkbox--disabled' : '' %}
{% set error_class = is_invalid ? 'ct-checkbox--invalid' : '' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, disabled_class, error_class, modifier_class|default(''))|trim %}

{% if name is not empty %}
  <div class="ct-checkbox {{ modifier_class }}">
    <input
      type="checkbox"
      class="ct-checkbox__control"
      name="{{ name }}"
      {% if value %}value="{{ value }}"{% endif %}
      {% if id %}id="{{ id }}"{% endif %}
      {{ is_checked ? 'checked' }}
      {{ is_disabled ? 'disabled' }}
      {% if attributes is not empty %}{{ attributes|raw }}{% endif %}
    />
    {% if content is not empty %}
      <label class="ct-checkbox__label" {% if id %}for="{{ id }}"{% endif %}>{{ content }}</label>
    {% endif %}
  </div>
{% endif %}
