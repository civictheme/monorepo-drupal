{#
/**
 * @file
 * Button component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - kind: [string] Button kind: submit, reset, button, link.
 * - type: [string] Button type: primary, primary, secondary, tertiary.
 * - size: [string] Button size: extra-large, large, regular, small, extra-small.
 * - icon: [string] Icon name.
 * - icon_placement: [string] Icon position: left, right
 * - icon_size: [string] Icon size: extra-large, large, regular, small, extra-small.
 * - text: [string] Button text.
 * - url: [string] URL for the link button.
 * - is_raw_text: [boolean] Output text as raw value.
 * - is_new_window: [boolean] Open in a new window or not.
 * - is_external: [boolean] If link is external or not.
 * - is_disabled: [boolean] Disabled or not.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set kind = kind in ['button', 'link', 'reset', 'submit'] ? kind : 'button' %}
{% set type = type in ['primary', 'secondary', 'tertiary'] ? type : null %}
{% set size = size in ['extra-large', 'large', 'regular', 'small', 'extra-small'] ? size : 'regular' %}
{% set icon_placement = icon_placement in ['before', 'after'] ? icon_placement : 'after' %}
{% set icon_size = icon_size in ['regular', 'small', 'extra-small'] ? icon_size : 'regular' %}
{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set type_class = type ? 'civictheme-button--%s'|format(type) : '' %}
{% set kind_class = kind ? 'civictheme-button--%s'|format(kind) : '' %}
{% set size_class = 'civictheme-button--%s'|format(size) %}
{% set dismiss_class =  is_dismissable ? 'civictheme-button--dismiss' : '' %}
{% set modifier_class = '%s %s %s %s %s %s'|format(theme_class, type_class, kind_class, size_class, dismiss_class, modifier_class|default('')) %}

{% set button_icon %}
  {% if icon %}
    <span class="civictheme-button__icon">
		  {% include '@atoms/icon/icon.twig' with {
        symbol: icon,
        size: icon_size,
      } only %}
		</span>
  {% endif %}
{% endset %}

{% set button_text %}
  {% if icon %}
    {% if icon_placement == 'before' %}
      {{ button_icon }}{{ is_raw_text ? text|raw : text }}
    {% elseif icon_placement == 'after' %}
      {{ is_raw_text ? text|raw : text }}{{ button_icon }}
    {% endif %}
  {% else %}
    {{ is_raw_text ? text|raw : text }}
  {% endif %}
{% endset %}

{% set button_text %}
  {% if is_external %}
    {{ button_text }}<span class="civictheme-button__external">
    {% include '@atoms/icon/icon.twig' with {
      symbol: 'arrows_upperrightarrow',
      size: icon_size,
    } only %}
    </span>
  {% else %}
    {{ button_text }}
  {% endif %}
{% endset %}

{% if kind == 'button' %}
  <button class="civictheme-button {{ modifier_class }}" {% if attributes %}{{ attributes|raw }}{% endif %} data-component-name="button" {% if is_disabled %}disabled="disabled" aria-disabled="true"{% endif %}>{{ button_text }}</button>
{% elseif kind == 'link' %}
  <a class="civictheme-button {{ modifier_class }}" {% if attributes %}{{ attributes|raw }}{% endif %} role="button" data-component-name="button" {% if url %}href="{{ url }}"{% endif %} {{ is_new_window ? 'target="_blank"' }} {% if is_disabled %}disabled="disabled" aria-disabled="true"{% endif %}>{{ button_text }}</a>
{% elseif kind in ['reset', 'submit'] %}
  <input class="civictheme-button {{ modifier_class }}" {% if attributes %}{{ attributes|raw }}{% endif %} type="{{ kind }}" data-component-name="button" {% if is_disabled %}disabled="disabled" aria-disabled="true"{% endif %} value="{{ (is_raw_text ? text|raw : text) |trim }}"/>
{% endif %}
