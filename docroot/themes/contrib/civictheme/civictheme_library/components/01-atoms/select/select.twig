{#
/**
 * @file
 * Select component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - is_multiple: [boolean] Is multiple.
 * - items: [array] Options:
 *   - type: [string] Option type: option group (optgroup) or option (option).
 *   - label: [string] Option label.
 *   - value: [string] Option value.
 *   - selected: [string] Flag whether option is selected.
 *   - items: [array] Array of options (applies to optgroup type):
 *     - label: [string] Option label.
 *     - value: [string] Option value.
 *     - selected: [string] Flag whether option is selected.
 * - is_required: [boolean] Denote if the control is required.
 * - is_invalid: [boolean] Denote if the control is invalid.
 * - is_disabled: [boolean] Denote if the control is disabled.
 * - name: [string] DOM name.
 * - value: [string] DOM value.
 * - id: [string] DOM id.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set disabled_class = is_disabled ? 'ct-select--disabled' : '' %}
{% set error_class = is_invalid ? 'ct-select--invalid' : '' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, disabled_class, error_class, modifier_class|default(''))|trim %}

{% if name is not empty and items is not empty %}
  <select
    class="ct-select ct-select__control {{ modifier_class }}"
    name="{{ name }}"
    {% if id %}id="{{ id }}"{% endif %}
    {{ is_multiple ? 'multiple' }}
    {{ is_disabled ? 'disabled' }}
    {{ is_required ? 'required' }}
    {% if attributes is not empty %}{{ attributes|raw }}{% endif %}
  >
    {% for item in items %}
      {% if item.type == 'optgroup' %}
        <optgroup label="{{ item.label }}">
          {% for sub_item in item.items %}
            {% if sub_item.label is not empty %}
              <option value="{{ sub_item.value|default('') }}" {{ sub_item.selected ? 'selected="selected"' }}>{{ sub_item.label }}</option>
            {% endif %}
          {% endfor %}
        </optgroup>
      {% elseif item.type == 'option' %}
        {% if item.label is not empty%}
          <option value="{{ item.value|default('') }}" {{ item.selected ? 'selected="selected"' }}>{{ item.label }}</option>
        {% endif %}
      {% endif %}
    {% endfor %}
  </select>
{% endif %}
