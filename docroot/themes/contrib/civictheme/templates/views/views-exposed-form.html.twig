{#
/**
 * @file
 * CivicTheme theme implementation of views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
{# Large filter is printed if there is more than 1 exposed filter in the view #}
{% if large_filter %}
  {% include '@organisms/large-filter/large-filter.twig' with {
    filter_title: filter_title,
    desktop_breakpoint: '>=m',
    filters: form,
    theme: 'light'
  }%}
{% else %}
  {{ form }}
{% endif %}
