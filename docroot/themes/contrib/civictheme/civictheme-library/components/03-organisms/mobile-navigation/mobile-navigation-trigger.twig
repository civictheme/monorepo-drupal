{#
/**
 * @file
 * Mobile Navigation Nenu Trigger component.
 *
 * Variables:
 * - theme: [string] theme: light, dark.
 * - text: [string] Button text.
 * - icon: [string] Icon symbol name.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = 'civictheme-mobile-navigation__trigger %s %s'|format(theme_class, modifier_class|default('')) %}
{% set icon = icon|default('content_justifyalignment') %}

{% include '@atoms/button/button.twig' with {
  theme: theme,
  kind: 'link',
  icon: icon,
  icon_placement: 'after',
  size: 'small',
  text: text,
  modifier_class: "civictheme-mobile-navigation__trigger {{ modifier_class }}",
  attributes: 'data-flyout-open-trigger data-flyout-target=".civictheme-mobile-navigation"',
} only %}
