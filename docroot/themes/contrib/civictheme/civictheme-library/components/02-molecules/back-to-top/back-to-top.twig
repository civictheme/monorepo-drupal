{#
/**
* @file
* Back to Top component.
*
* Variables:
* - theme: [string] Theme: light, dark.
*/
#}

{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}

<div class="civictheme-back-to-top {{ theme_class }}" data-component-name="back-to-top" data-scrollspy data-scrollspy-offset="400">
  {% include '@atoms/button/button.twig' with {
    theme: theme,
    kind: 'link',
    type: 'primary',
    icon: 'arrows_uparrow_1',
    url: '#top',
    title:'Return focus to top of page',
  } only %}
</div>
