{#
/**
 * @file
 * Skip link component.
 *
 * Variables:
 * - theme: [string] theme: light, dark.
 * - url: [string] URL for the link button.
 * - text: [string] Link text.
 */
#}

{% set text = text|default('Skip to main content') %}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set is_disabled = is_disabled ? 'civic-directional-link--disabled': '' %}

{% set icons = {
  top: {
    spritesheet: "/icons/civic-arrows.svg",
    symbol: "arrows-up-arrow-1",
  },
  bottom: {
    spritesheet: "/icons/civic-arrows.svg",
    symbol: "arrows-down-arrow-2",
  },
  next: {
    spritesheet: "/icons/civic-arrows.svg",
    symbol: "arrows-right-arrow-3",
  },
  back: {
    spritesheet: "/icons/civic-arrows.svg",
    symbol: "arrows-left-arrow-2",
  }
}
%}

<div class="civic-directional-link {{ theme_class }} {{ is_disabled }}">
  <a class="civic-directional-link__link" href="{{ url }}">
    {{ text }}
    {% if icons[direction] is defined %}
      {% include '@atoms/icon/icon.twig' with {
        symbol: icons[direction].symbol,
        modifier_class: '%s civic-icon--%s'|format(theme_class, direction)
      } %}
    {% endif %}
  </a>
</div>
