{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set striped_class = striped ? 'civic-table--%s'|format('striped') : '' %}
{% set modifier_class = '%s %s %s'|format(theme_class, striped_class, modifier_class|default('')) %}

{% if rows is not empty %}
  <div class="civic-table {{ modifier_class }}">
    {% if heading %}
      <div class="civic-table__header">
        <h2>{{ heading }}</h2>
      </div>
    {% endif %}
    <table>
      {% if header is not empty %}
        <thead>
        <tr>
          {% for item in header %}
            <th scope="col">{{ item }}</th>
          {% endfor %}
        </tr>
        </thead>
      {% endif %}
      <tbody>
      {% if rows is not empty %}
        {% for row in rows %}
          <tr>
            {% for item in row %}
              <td data-title="{{ header[loop.index] }}">
                {{ item }}
              </td>
            {% endfor %}
          </tr>
        {% endfor %}
      {% else %}
        <div class="civic-table__empty"> Table is empty</div>
      {% endif %}
      </tbody>
      <caption class="civic-table__caption">{{ caption }}</caption>
    </table>
  </div>
{% endif %}
