{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set striped_class = striped ? 'civic-table--%s'|format('striped') : '' %}
{% set component_class = 'civic-table' %}
{% set table_class = '%s %s %s'|format(component_class, theme_class, striped_class) %}

<div class="{{ table_class }}">
  {% if heading %}
    <div class="civic-table__header">
      <h2>{{ heading }}</h2>
    </div>
  {% endif %}
  <table>
    {% if header is not empty %}
    <thead>
      <tr>
        {% for item in header %}
          <th scope="col">{{ item }}</th>
        {% endfor %}
      </tr>
    </thead>
    {% endif %}
    <tbody>
      {% if rows is not empty %}
        {% for row in rows  %}
          <tr>
            {% for item in row %}
              <td data-title="{{ header[loop.index] }}">{{ item }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      {% else %}
        <h2> Table is empty </h2>
      {% endif %}
    </tbody>
    <caption>{{ caption }}</caption>
  </table>
</div>
