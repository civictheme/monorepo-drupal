{#
/**
 * @file
 * Civic form element label component.
 *
 * Available variables:
 * - title: [string] The label's text.
 * - title_display: [string] Elements title_display setting.
 * - required: [string] An indicator for whether the associated form element is required.
 * - theme: [string] theme: light, dark.
 * - attributes: [string] HTML attributes for the containing element.
 * - modifier_class: [string] Additional classes to modify component styling.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set title_position = title_display == 'after' ? 'civic-label--option' : '' %}
{% set visibility_class =  title_display == 'invisible' ? 'visually-hidden' : '' %}
{% set required_class =  required ? 'civic-label--required' : '' %}
{% set modifier_class = '%s %s %s %s %s %s'|format(theme_class, title_position, visibility_class, required_class, required_class, modifier_class|default('')) %}

{% if title is not empty or required -%}
  <label class="civic-label {{ modifier_class }}" {{ attributes }}>{{ title }}</label>
{%- endif %}
