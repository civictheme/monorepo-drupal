{#
/**
 * @file
 * Icon Link component.
 *
 * Variables:
 * - modifier_class: [string] Classes to modify the default component styling.
 * - new_window: [boolean] Open in a new window.
 * - text: [string] Link text or title attribute if icon link.
 * - url: [string] URL for the link button.
 * - symbol: [string] Replaces link text with icon.
 * - size: [string] Icon size.
 */
#}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = modifier_class|default('civic-icon-link--normal') %}
{% set modifier_class = '%s %s %s'|format(modifier_class, theme_class, (size ? 'civic-icon-link--size-' ~ size : '')) %}
{% set title_attribute = symbol ? 'title="Go to ' ~ text ~ '"' : '' %}
<a class="civic-icon-link {{ modifier_class }}" href="{{ url }}" {{ new_window ? 'target="_blank"' }} {{ title_attribute }}>
    {% include '@atoms/icon/icon.twig' with {
        symbol: symbol,
        size: size
    }  only %}
</a>
