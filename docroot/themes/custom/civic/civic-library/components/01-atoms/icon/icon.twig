{#
/**
 * @file
 * Icon component.
 * Creates an inline SVG.
 *
 * Variables:
 * - symbol: [string] Icon name.
 * - color: [string] Icon color.
 * - modifier_class: [string] Additional classes to modify component styling.
 */
#}
{% extends '@atoms/icon/icon_library.twig' %}
{% block content %}
  {% set icon = icons[symbol] %}
  {% set title = symbol | split('_', 2)[1] %}
  {% set width = icon.width | default('16px') %}
  {% set height = icon.height | default('16px') %}
  {% set modifier_class = '%s %s'|format((color ? 'civic-icon--color-' ~ color : ''), modifier_class) %}

  {% if icon.paths is defined %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="civic-icon {{ modifier_class }}"
      title="{{ title }}"
      width="{{width}}"
      height="{{height}}"
      viewBox="0 0 {{width}} {{height}}"
      aria-hidden="true"
    >
      {% for path in icon.paths %}
        <path {% for attr in path|keys %} {{attr}}="{{path[attr]}}"{% endfor %} />
      {% endfor %}
    </svg>
  {% endif %}
{% endblock %}
