{#
/**
 * @file
 * Logo component.
 *
 * Variables:
 * - theme: [string] theme: light, dark.
 * - logos: [object] Desktop and mobile Image object
 *    - link: [string] URL for the logo.
 *    - alt: [string] Image alt text.
 * - modifier_class: [string] Additional classes for the component.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = modifier_class ? [modifier_class, theme_class] : [theme_class] %}
{% for type, logo in logos %}
  {% set visibility_class = type == 'mobile' ? 'show-xs show-sm hide-m' : 'hide-xs hide-sm show-m' %}
  {% if logo.src is not empty %}
    <div class="civic-logo {{ modifier_class|join(' ') }} {{ visibility_class }}">
      {% include '@atoms/image/image.twig' with {
        src: logo.src,
        alt: logo.alt,
      } only %}
    </div>
  {% endif %}
{% endfor%}

