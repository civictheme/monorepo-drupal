{#
/**
 * @file heading!
 *
 * Available variables:
 * - src: [string] Path of the image.
 * - alt: [string] Alternate text of the image.
 * - caption: [string] Caption below the image.
 * - theme: [string] component theme.
 */
#}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if src %}
  <figure class="civic-image {{ modifier_class }}">
    <img src="{{ src }}" alt="{{ alt }}" {{ attributes }}>

    {% if caption is not empty %}
      <figcaption class="civic-image__caption">
        {% include '@atoms/icon/icon.twig' with {
          symbol: 'multimedia_image_3',
          color: 'neutral_60',
        } %}
        {{ caption }}
      </figcaption>
    {% endif %}
  </figure>
{% endif %}
