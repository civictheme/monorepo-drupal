{#
/**
 * @file
 * Messages component.
 *
 * This is strictly an exmaple file to demonstrate markup in Storybook.
 * It is not intended to be included in any other component.
 *
 * Variables:
 * - type: [string] Message type: Info, Error, Warning, Success.
 * - theme: [string] Light, Dark.
 * - title: [string] Message title.
 * - description: [string] Message summary.
 *
 */
#}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set component_class = 'civic-messages' %}
{% set type_class = 'civic-messages--%s'|format(type|default('info')) %}
{% set messages_class = '%s %s %s'|format(component_class, theme_class, type_class) %}
{% set icons = {
    info: {
      spritesheet: "/icons/civic-user-interface.svg",
      symbol: "user-interface-information-mark",
    },
    warning: {
      spritesheet: "/icons/civic-user-interface.svg",
      symbol: "user-interface-exclamation-mark-1",
    },
    error: {
      spritesheet: "/icons/civic-user-interface.svg",
      symbol: "user-interface-close-2",
    },
    success: {
      spritesheet: "/icons/civic-user-interface.svg",
      symbol: "user-interface-approve",
    }
  }
%}

<div class="{{ messages_class }}">
  <div class="{{ component_class }}__icon">
    {% if icons[type] is defined %}
      {% include '@atoms/icon/icon.twig' with {
        spritesheet: icons[type].spritesheet,
        symbol: icons[type].symbol,
        modifier_class: '%s civic-icon--%s'|format(theme_class, type)
      } %}
    {% endif %}
  </div>
  <div class="{{ component_class }}__contnet">
    <div class="{{ component_class }}__title">{{ title }}</div>
    <div class="{{ component_class }}__summary">{{ description }}</div>
  </div>
</div>
