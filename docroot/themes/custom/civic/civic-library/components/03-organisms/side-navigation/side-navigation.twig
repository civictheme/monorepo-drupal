{#
/**
 * @file
 * Side navigation component.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if items is not empty %}
  <div class="civic-side-navigation {{ modifier_class }}" {% if attributes %}{{ attributes }}{% endif %}>
    {% if title %}
      {% block title %}
        <div class="civic-navigation__title">
          {{ title }}
        </div>
      {% endblock %}
    {% endif %}

    {% include '@base/menu/menu.twig' with {
      theme: theme,
      items: items,
      modifier_class: 'civic-navigation__menu',
    } only %}

  </div>
{% endif %}
