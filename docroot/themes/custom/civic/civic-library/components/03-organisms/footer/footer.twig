{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if content_top1 is not empty or content_top2 is not empty or content_middle1 is not empty or content_middle2 is not empty or content_middle3 is not empty or content_middle4 is not empty or content_bottom1 is not empty or content_bottom2 is not empty %}
  <footer class="civic-footer {{ modifier_class }}" role="contentinfo" data-component-name="civic-footer">

    {% if content_top1 is not empty or content_top2 is not empty %}
      <div class="container civic-footer__top">
        <div class="row">

          {% if content_top1 is not empty %}
            {%- block content_top1 %}
              <div class="col-xs-12 col-m-6">
                <div class="civic-footer__top__content-top1">
                  {{- content_top1 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_top2 is not empty %}
            {%- block content_top2 %}
              <div class="col-xs-12 col-m-6">
                <div class="civic-footer__top__content-top2">
                  {{- content_top2 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

    {% if content_middle1 is not empty or content_middle2 is not empty or content_middle3 is not empty or content_middle4 is not empty %}
      <div class="container civic-footer__middle">
        <div class="row">

          {% if content_middle1 is not empty %}
            {%- block content_middle1 %}
              <div class="col-xs-12 col-m-3">
                <div class="civic-footer__middle__content-middle1">
                  {{- content_middle1 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle2 is not empty %}
            {%- block content_middle2 %}
              <div class="col-xs-12 col-m-3">
                <div class="civic-footer__middle__content-middle2">
                  {{- content_middle2 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle3 is not empty %}
            {%- block content_middle3 %}
              <div class="col-xs-12 col-m-3">
                <div class="civic-footer__middle__content-middle3">
                  {{- content_middle3 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle4 is not empty %}
            {%- block content_middle4 %}
              <div class="col-xs-12 col-m-3">
                <div class="civic-footer__middle__content-middle4">
                  {{- content_middle4 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

    {% if content_bottom1 is not empty or content_bottom2 is not empty %}
      <div class="container civic-footer__bottom">
        <div class="row">

          {% if content_bottom1 is not empty %}
            {%- block content_bottom1 %}
              <div class="col-xs-12 col-m-7">
                <div class="civic-footer__bottom__content-bottom1">
                  {{- content_bottom1 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_bottom2 is not empty %}
            {%- block content_bottom2 %}
              <div class="col-xs-12 col-m-5">
                <div class="civic-footer__bottom__content-bottom2">
                  {{- content_bottom2 -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

  </footer>
{% endif %}
