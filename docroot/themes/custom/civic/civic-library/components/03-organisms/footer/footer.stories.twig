{% extends './footer.twig' %}
{% import '../menu/menu.twig' as menus %}

{% block logo %}
	<div class="civic-footer__logo">
    <img src="{{ image.src }}" {% if image.alt is not empty %} alt="{{ image.alt }} {% endif %}">
  </div>
{% endblock %}

{% block top_right %}
	{% if socialLinks %}
	  <div class="civic-footer__top--right">
	  	<div class="civic-footer__social-links">
        {% include '@organisms/social-links/social-links.twig' with {
          theme: theme,
          links: [
            {
              symbol: 'brands_facebook',
              size: 'regular',
              url: 'www.facebook.com',
            },
            {
              symbol: 'brands_twitter',
              size: 'regular',
              url: 'www.facebook.com',
            },
            {
              symbol: 'brands_linkedin',
              size: 'regular',
              url: 'www.facebook.com',
            },
          ],
          with_border: true,
        } only %}
			</div>
	  </div>
	{% endif %}
{% endblock %}

{% block middle %}
  {% if showMiddleMenus %}
    <div class="civic-footer__middle">
    <div class="row">
      {% for itr in 1..4 %}
          {% set title = 'Footer Menu--' ~ itr %}
          {% set links = [
              { title: 'For individuals', url: '#' },
              { title: 'For businesses', url: '#' },
              { title: 'For government', url: '#' },
              { title: 'Services', url: '#' },
              { title: 'News & events', url: '#' },
          ] %}
          <div class="col-m-6 col-l-3 hide-xs show-m" >
              {% include '@atoms/heading/heading.twig' with {
                  level: 2,
                  title: title,
                  modifier_class: 'civic-footer__middle-title'
              } %}
              <div class="civic-footer-menu">
                  {% include '@organisms/menu/menu.twig' with {
                      theme: theme,
                      items: links,
                      menu_type: 'list',
                  } only %}
              </div>
          </div>
          <div class="col-xs-12 hide-m">
            {% embed '@molecules/collapsible/collapsible.twig' with {
                title: 'Footer Menu--' ~ itr
            } %}
                {% block title %}
                    {% include '@atoms/heading/heading.twig' with {
                        level: 2,
                        title: title,
                        modifier_class: 'civic-footer__middle-title'
                    } %}
                {% endblock %}
                {% block content %}
                    {% include '@organisms/menu/menu.twig' with {
                        theme: theme,
                        items: links,
                        menu_type: 'list',
                    } only %}
                {% endblock %}
            {% endembed %}
        </div>
      {% endfor %}
    </div>
    </div>
  {% endif %}
{% endblock %}

{% block bottom_left %}
	{% if copyright %}
		<p class="civic-footer__acknowledgement">{{ acknowledgement }}</p>
	{% endif %}
{% endblock %}

{% block bottom_right %}
  {% if copyright %}
		<p class="civic-footer__copyright">{{ copyright }}</p>
	{% endif %}
{% endblock %}



