{% extends './footer.twig' %}
{% import '../menu/menu.twig' as menus %}

{% block logo %}
	<div class="civic-footer__logo">
        {% include '@atoms/logo/logo.twig' with {
            'theme': theme,
            'logos': {
                'mobile': {
                    'src': image.src,
                    'alt': image.alt,
                },
                'desktop': {
                    'src': image.src,
                    'alt': image.alt,
                }
            }
        } only %}
    </div>
{% endblock %}

{% block top_right %}
	{% if socialLinks %}
	  <div class="civic-footer__top--right">
	  	<div class="civic-footer__social-links">
        {% include '@organisms/social-links/social-links.twig' with {
          theme: theme,
          links: [
            {
              symbol: 'brands_facebook',
              size: 'regular',
              url: 'www.facebook.com',
            },
            {
              symbol: 'brands_twitter',
              size: 'regular',
              url: 'www.facebook.com',
            },
            {
              symbol: 'brands_linkedin',
              size: 'regular',
              url: 'www.facebook.com',
            },
          ],
          with_border: true,
        } only %}
			</div>
	  </div>
	{% endif %}
{% endblock %}

{% block middle %}
  {% if showMiddleMenus %}
    <div class="civic-footer__middle">
        <div class="civic-footer__middle-inner row">
            {% for itr in 1..4 %}
                {% set titles = [
                    'For Individuals',
                    'About us',
                    'Help',
                    'Services'
                ] %}
                {% set links = [
                    { title: 'For individuals', url: '#' },
                    { title: 'For businesses', url: '#' },
                    { title: 'For government', url: '#' },
                    { title: 'Services', url: '#' },
                    { title: 'News & events', url: '#' },
                ] %}
                <div class="col-m-6 col-l-3 hide-xs show-m" >
                    <h2 class="civic-footer__middle-title">{{ titles[itr - 1] }}</h2>
                    <div class="civic-footer__menu">
                        {% include '@organisms/menu/menu.twig' with {
                            theme: theme,
                            items: links,
                            menu_type: 'list',
                        } only %}
                    </div>
                </div>
                <div class="civic-footer__menu hide-m">
                    {% embed '@molecules/collapsible/collapsible.twig' with {
                        modifier_class: 'civic-footer__middle-collapsible'
                    } %}
                        {% block title %}
                            <h2 class="civic-footer__middle-title">{{ titles[itr - 1] }}</h2>
                        {% endblock %}
                        {% block content %}
                            {% include '@organisms/menu/menu.twig' with {
                                theme: theme,
                                items: links,
                                menu_type: 'list',
                            } only %}
                        {% endblock %}
                    {% endembed %}
                </div>
            {% endfor %}
        </div>
    </div>
  {% endif %}
{% endblock %}

{% block bottom_left %}
	{% if copyright %}
		<p class="civic-footer__acknowledgement">{{ acknowledgement }}</p>
	{% endif %}
{% endblock %}

{% block bottom_right %}
  {% if copyright %}
		<p class="civic-footer__copyright">{{ copyright }}</p>
	{% endif %}
{% endblock %}



