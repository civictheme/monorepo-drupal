{% extends './footer.twig' %}
{% import '../menu/menu.twig' as menus %}

{% if logos is not empty %}
  {% set content_top1 %}
    {% include '@atoms/logo/logo.twig' with {
      'theme': theme == 'light' ? 'dark' : 'light',
      'logos': logos,
      'modifier_class': 'civic-footer__logo',
    } only %}
  {% endset %}
{% endif %}

{% if show_social_links %}
  {% set content_top3 %}
    {% include '@organisms/social-links/social-links.twig' with {
      'theme': theme,
      'links': [
        {
          symbol: 'brands_facebook',
          size: 'regular',
          url: 'www.facebook.com',
        },
        {
          symbol: 'brands_twitter',
          size: 'regular',
          url: 'www.facebook.com',
        },
        {
          symbol: 'brands_linkedin',
          size: 'regular',
          url: 'www.facebook.com',
        },
      ],
      'with_border': true,
      'modifier_class': 'civic-justify-content-end',
    } only %}
  {% endset %}
{% endif %}

{% if show_middle_menus %}
  {% set links = [
    { title: 'For individuals', url: '#' },
    { title: 'For businesses', url: '#' },
    { title: 'For government', url: '#' },
    { title: 'Services', url: '#' },
    { title: 'News & events', url: '#' },
  ] %}

  {% set content_middle1 %}
    {% include '@organisms/menu/menu.twig' with {
      theme: theme,
      items: links,
      menu_type: 'list',
    } only %}
  {% endset %}
  {% set content_middle2 %}
    {% include '@organisms/menu/menu.twig' with {
      theme: theme,
      items: links,
      menu_type: 'list',
    } only %}
  {% endset %}
  {% set content_middle3 %}
    {% include '@organisms/menu/menu.twig' with {
      theme: theme,
      items: links,
      menu_type: 'list',
    } only %}
  {% endset %}
  {% set content_middle4 %}
    {% include '@organisms/menu/menu.twig' with {
      theme: theme,
      items: links,
      menu_type: 'list',
    } only %}
  {% endset %}
{% endif %}
