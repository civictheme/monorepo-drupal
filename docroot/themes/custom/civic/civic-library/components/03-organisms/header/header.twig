<header class="civic-header" role="banner">
  <div class="container">

    {% block top %}
      {% if top %}
        <div class="row">
          <div class="col-m-12">
            <div class="civic-header__top">
              {{ top }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}

    {% block logocontent %}
      {% if logo or contnet %}
        <div class="row">
          <div class="col-m-4">
            {% block logo %}
              {% if logo.src is not empty %}
                <div class="civic-header__logo">
                  <img src="{{ logo.src }}" {% if logo.alt is not empty %} alt="{{ logo.alt }} {% endif %}">
                </div>
              {% endif %}
            {% endblock %}
          </div>

          <div class="col-m-8">
            {% block content %}
              <div class="civic-header__content">
                {{ content }}
              </div>
            {% endblock %}
          </div>
        </div>
      {% endif %}
    {% endblock %}

    {% block bottom %}
      {% if bottom %}
        <div class="row">
          <div class="col-m-12">
            <div class="civic-header__bottom">
              {{ bottom }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}

  </div>
</header>
