{% extends './header.twig' %}

{% block top %}
    {% if showTop %}
          <div class="civic-header__top">
            <div class="container">
              <div class="row">
                <div class="xs-hide col-m-12">
                  <div class="civic-header__slogan">
                    <span>{{ slogan }}</span>
                  </div>
                  <div class="civic-header__top-menu">

                  </div>
                </div>
              </div>
            </div>
          </div>
    {% endif %}
{% endblock %}

{% block bottom %}
  {% if showBottom %}
    <div class="container">
      <div class="row">
        <div class="col-m-12">
          <div class="civic-header__bottom">
            {{ bottom }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
