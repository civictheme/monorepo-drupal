{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set type_class =  type is not empty ? 'civic-form-element--%s'|format(type) : '' %}
{% set name_class = name is not empty ?  'civic-form-element--%s'|format(name) : '' %}
{% set label_class = title_display not in ['after', 'before'] ? 'civic-form-element--no-label' : '' %}
{% set disabled_class =  disabled == 'disabled' ? 'civic-form-element--form-disabled' : '' %}
{% set error_class =  errors is not empty ? 'civic-form-element--error' : '' %}

{% set modifier_class = '%s %s %s %s %s %s %s'|format(theme_class, type_class, name_class, label_class, disabled_class, error_class, modifier_class|default('')) %}

{% set description_modifier_class = '%s %s'|format(description_visibility_class, description_display_class %}

<div class="civic-form-element {{ modifier_class }}" {{ attributes }}>
  {% if label_display in ['before', 'invisible'] %}
    {{ label }}
  {% endif %}
  {% if prefix is not empty %}
    <span class="field-prefix">{{ prefix }}</span>
  {% endif %}
  {% if description_display == 'before' and description.content %}
    <div class="civic-form-element__description {{ description_modifier_class }}" {{ description.attributes }}>
      {{ description.content }}
    </div>
  {% endif %}
  {{ children }}
  {% if suffix is not empty %}
    <span class="field-suffix">{{ suffix }}</span>
  {% endif %}
  {% if label_display == 'after' %}
    {{ label }}
  {% endif %}
  {% if errors %}
    {% include '@organisms/message/message.twig' with {
      theme: theme,
      type: 'error',
      title: errors
    } only %}
  {% endif %}
  {% if description_display in ['after', 'invisible'] and description.content %}
    <div class="civic-form-element__description {{ description_modifier_class }}" {{ description.attributes }}>
      {{ description.content }}
    </div>
  {% endif %}
</div>
