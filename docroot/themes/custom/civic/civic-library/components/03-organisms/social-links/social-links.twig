{#
/**
 * @file Social links component.
 *
 * Available variables:
 * - theme: [string] Theme: light, dark.
 * - links: [array] Menu links array.
 */
#}

{% set classes = ['civic-social-links'] %}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set classes = classes|merge([theme_class]) %}

<div class="{{ classes|join(' ') }}">
  {% for socialLink in links %}
    <div class="civic-social-links__item">
      {% include '@atoms/icon-link/icon-link.twig' with {
        theme: theme,
        symbol: socialLink.symbol,
        size: socialLink.size,
        url: socialLink.url,
        with_border: with_border,
      } only %}
    </div>
  {% endfor %}
</div>
