{#
/**
 * @file heading!
 *
 * Available variables:
 * - title: [string] The text of title.
 * - heading_level: [string] h1 | h2 | h3 | h4 | h5 | h6 The default is h2.
 * - modifier_class: [string] Classes to modify the default component styling.
 */
#}

{% set heading_level = heading_level|default('h2') %}

{# Defaults to h2 (heading level 2) if no heading level is supplied. #}
<{{ heading_level }} class="civic-heading {{ modifier_class }}">
    {{- title|raw -}}
</{{ heading_level }}>
