{#
/**
 * @file
 * Default theme implementation to display a Next step.
 */
#}
{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}

{% set attributes = attributes.addClass(classes) %}

{% block paragraph %}
  {% include '@molecules/card-container/card-container.twig' with {
    title: paragraph.field_c_p_title.value,
    column_count: content.field_c_p_image,
    fill_width: paragraph.field_c_p_fill_width.value,
    modifier_class: attributes.getClass(),
    cards: content.field_c_p_cards|filter((v, k) => (k|first != '#')),
    link_text: paragraph.field_c_p_link.0.title,
    url: paragraph.field_c_p_link.0.url,
  } only %}
{% endblock %}
