{#
/**
 * @file
 * Default theme implementation to display a Event card.
 */
#}
{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}

{% set attributes = attributes.addClass(classes) %}

{% block paragraph %}
  {% include '@molecules/event-card/event-card.twig' with {
    date: paragraph.field_c_p_date.0.value,
    summary: content.field_c_p_summary,
    title: paragraph.field_c_p_title.value,
    url: paragraph.field_c_p_link.0.url,
    image: {
      src: file_url(paragraph.field_c_p_image.entity.field_media_image.entity.fileuri),
      alt: paragraph.field_c_p_image.entity.field_media_image.entity.alt,
    },
    modifier_class: attributes.getClass(),
  } only %}
{% endblock %}
