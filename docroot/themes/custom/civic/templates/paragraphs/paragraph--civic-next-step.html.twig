{#
/**
 * @file
 * Default theme implementation to display a Next step.
 */
#}
{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}

{% set attributes = attributes.addClass(classes) %}

{% block paragraph %}
  {% include '@molecules/next-steps/next-steps.twig' with {
    theme: paragraph.field_c_p_theme.value,
    summary: content.field_c_p_summary,
    title: paragraph.field_c_p_title.value,
    comtent_top: content.field_c_p_image,
    icon: {
      src: file_url(paragraph.field_c_p_icon.entity.field_c_m_icon.entity.fileuri),
      alt: paragraph.field_c_p_icon.entity.field_c_m_icon.entity.alt,
    },
    modifier_class: attributes.getClass(),
  } only %}
{% endblock %}
