                                                    },
                                                    "title": {
                                                      "type": "string"
                                                    }
                                                  },
                                                  "required": [
                                                    "uri",
                                                    "title"
                                                  ]
                                                }
                                              ]
                                            }
                                          },
                                          "required": [
                                            "item_title",
                                            "item_links"
                                          ]
                                        },
                                        "subject_card": {
                                          "type": "object",
                                          "properties": {
                                            "item_title": {
                                              "type": "string"
                                            }
                                          },
                                          "required": [
                                            "item_title"
                                          ]
                                        }
                                      },
                                      "required": [
                                        "promo_card",
                                        "event_card",
                                        "publication_card",
                                        "service_card",
                                        "subject_card"
                                      ]
                                    }
                                  ]
                                }
                              },
                              "required": [
                                "type",
                                "children"
                              ]
                            }
                          },
                          "required": [
                            "cards"
                          ]
                        }
                      },
                      "required": [
                        "type",
                        "children"
                      ]
                    },
